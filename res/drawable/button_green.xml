<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#0A2A0A" />
             <gradient  android:angle="-90"  android:startColor="#DF7401" android:endColor="#FFBF00"  />           
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#0A2A0A" />
             <solid  android:color="#308d9e"/>      
         </shape>
     </item> 
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#0A2A0A" />
             <gradient  android:angle="-90"  android:startColor="#31B404" android:endColor="#0B3B0B" />           
         </shape>
     </item>
</selector>