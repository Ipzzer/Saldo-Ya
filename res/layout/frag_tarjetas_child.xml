<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >

        <TextView
            android:id="@+id/Txt_tarjetas_numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="3dp" />
        
        <TextView
            android:id="@+id/Txt_tarjetas_corredores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Txt_tarjetas_numero"
            android:layout_below="@+id/Txt_tarjetas_numero"
            android:paddingBottom="3dp" />

        <TextView
            android:id="@+id/Txt_tarjetas_ultima_transaccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Txt_tarjetas_corredores"
            android:layout_below="@+id/Txt_tarjetas_corredores"
            android:paddingBottom="7dp"
            android:text="@string/texto_ultima_transaccion" />

        <Button
            android:id="@+id/Btn_tarjetas_eliminar"
            style="@style/Base_button_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Txt_tarjetas_ultima_transaccion"
            android:layout_alignParentRight="true"
            android:text="@string/btn_eliminar" />
        
</RelativeLayout>